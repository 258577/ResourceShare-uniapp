.recommend-resources {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.recommend-resources .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.recommend-resources .section-header .section-title {
  font-size: 34rpx;
  font-weight: bold;
  position: relative;
  padding-left: 20rpx;
}
.recommend-resources .section-header .section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #007aff;
  border-radius: 4rpx;
}
.recommend-resources .section-header .more-link {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.recommend-resources .loading,
.recommend-resources .empty {
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.recommend-resources .loading .empty-text,
.recommend-resources .empty .empty-text {
  color: #999;
  font-size: 28rpx;
}
.recommend-resources .resources-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.recommend-resources .resources-grid .resource-card {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.recommend-resources .resources-grid .resource-card .resource-image {
  width: 100%;
  height: 200rpx;
}
.recommend-resources .resources-grid .resource-card .resource-info {
  padding: 16rpx;
}
.recommend-resources .resources-grid .resource-card .resource-info .resource-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}
.recommend-resources .resources-grid .resource-card .resource-info .resource-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}
.recommend-resources .resources-grid .resource-card .resource-info .resource-meta .category {
  background-color: #e6f7ff;
  color: #007aff;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}