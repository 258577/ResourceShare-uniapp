.container {
  padding: 20rpx;
}
.container .search-container {
  padding: 20rpx 0;
}
.container .search-container .search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 10rpx 30rpx;
}
.container .search-container .search-box .icon-search {
  font-size: 36rpx;
  color: #999;
  margin-right: 10rpx;
}
.container .search-container .search-box .search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}
.container .search-container .search-box .search-btn {
  font-size: 28rpx;
  color: #007aff;
  padding: 0 10rpx;
}
.container .menu-container {
  margin: 20rpx 0;
}
.container .menu-container .menu-scroll {
  white-space: nowrap;
}
.container .menu-container .menu-scroll .menu-item {
  display: inline-block;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
}
.container .menu-container .menu-scroll .menu-item.active {
  color: #007aff;
  font-weight: bold;
  position: relative;
}
.container .menu-container .menu-scroll .menu-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 4rpx;
  background-color: #007aff;
  border-radius: 2rpx;
}
.container .content-container {
  padding: 20rpx 0;
}
.container .content-container .resource-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.container .content-container .resource-grid .resource-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}
.container .content-container .resource-grid .resource-item .resource-content {
  cursor: pointer;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.container .content-container .resource-grid .resource-item .resource-cover {
  width: 100%;
  height: 200rpx;
}
.container .content-container .resource-grid .resource-item .resource-info {
  padding: 20rpx;
  padding-bottom: 10rpx;
  flex: 1;
}
.container .content-container .resource-grid .resource-item .resource-info .resource-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.container .content-container .resource-grid .resource-item .resource-info .resource-desc {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.container .content-container .resource-grid .resource-item .resource-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 0 20rpx 20rpx;
}
.container .content-container .empty-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.container .content-container .empty-data image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.container .content-container .empty-data text {
  font-size: 28rpx;
  color: #999;
}