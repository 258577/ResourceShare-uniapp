.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.container .search-container {
  padding-bottom: 20rpx;
}
.container .search-container .search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 10rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.container .search-container .search-box .icon-search {
  font-size: 36rpx;
  color: #999;
  margin-right: 10rpx;
}
.container .search-container .search-box .search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}
.container .search-container .search-box .search-btn {
  font-size: 28rpx;
  color: #007aff;
  padding: 0 10rpx;
}
.container .result-container .result-header {
  margin: 20rpx 0;
}
.container .result-container .result-header .result-tip {
  font-size: 28rpx;
  color: #666;
}
.container .result-container .resource-list .resource-item {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.container .result-container .resource-list .resource-item image {
  width: 200rpx;
  height: 200rpx;
}
.container .result-container .resource-list .resource-item .info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.container .result-container .resource-list .resource-item .info .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.container .result-container .resource-list .resource-item .info .type {
  font-size: 24rpx;
  color: #007aff;
  margin-bottom: 10rpx;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  max-width: -webkit-max-content;
  max-width: max-content;
}
.container .result-container .resource-list .resource-item .info .desc {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.container .result-container .empty-result,
.container .result-container .search-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.container .result-container .empty-result image,
.container .result-container .search-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.container .result-container .empty-result text,
.container .result-container .search-tip text {
  font-size: 28rpx;
  color: #999;
}