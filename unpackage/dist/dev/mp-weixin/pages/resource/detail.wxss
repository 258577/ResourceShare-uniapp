.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.container .resource-detail {
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.container .resource-detail .cover {
  width: 100%;
  height: 400rpx;
}
.container .resource-detail .header {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.container .resource-detail .header .title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}
.container .resource-detail .header .actions {
  display: flex;
  justify-content: flex-end;
}
.container .resource-detail .info {
  padding: 20rpx;
}
.container .resource-detail .info .stats {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.container .resource-detail .info .desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: block;
}
.container .resource-detail .info .link-section {
  margin: 30rpx 0;
  background-color: #007aff;
  border-radius: 10rpx;
  color: #fff;
  padding: 25rpx 0;
  text-align: center;
  display: flex;
  flex-direction: column;
}
.container .resource-detail .info .link-section .link-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.container .resource-detail .info .link-section .link-tip {
  font-size: 24rpx;
  opacity: 0.8;
}
.container .resource-detail rich-text {
  padding: 0 20rpx 30rpx;
}
.container .loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
}