.container {
  padding: 20rpx;
}
.container .search-container {
  padding-bottom: 20rpx;
}
.container .search-container .search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 10rpx 30rpx;
}
.container .search-container .search-box .icon-search {
  font-size: 36rpx;
  color: #999;
  margin-right: 10rpx;
}
.container .search-container .search-box .search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}
.container .search-container .search-box .search-btn {
  font-size: 28rpx;
  color: #007aff;
  padding: 0 10rpx;
}
.container .banner {
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.container .banner .empty-banner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}
.container .banner .empty-banner image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}
.container .banner .empty-banner text {
  font-size: 28rpx;
  color: #999;
}
.container .banner image {
  width: 100%;
  height: 100%;
}
.container .category-container {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
}
.container .category-container .category-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.container .category-container .category-row .category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}
.container .category-container .category-row .category-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.container .category-container .category-row .category-item text {
  font-size: 24rpx;
  color: #333;
}
.container .resource-section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.container .resource-section .section-header .section-title {
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
  padding-left: 20rpx;
}
.container .resource-section .section-header .section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 30rpx;
  background-color: #007aff;
  border-radius: 4rpx;
}
.container .resource-section .empty-tip {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.container .resource-section .empty-tip image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
  opacity: 0.7;
}
.container .resource-section .empty-tip .sub-tip {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 10rpx;
}
.container .resource-list .resource-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.container .resource-list .resource-item image {
  width: 200rpx;
  height: 200rpx;
}
.container .resource-list .resource-item .info {
  flex: 1;
  padding: 20rpx;
}
.container .resource-list .resource-item .info .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.container .resource-list .resource-item .info .desc {
  font-size: 26rpx;
  color: #666;
}