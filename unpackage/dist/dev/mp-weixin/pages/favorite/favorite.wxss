.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}
.container .not-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.container .not-login text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}
.container .not-login button {
  width: 200rpx;
}
.container .favorite-list {
  height: calc(100vh - 40rpx);
}
.container .favorite-list .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
.container .favorite-list .resource-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.container .favorite-list .resource-item image {
  width: 200rpx;
  height: 200rpx;
}
.container .favorite-list .resource-item .info {
  flex: 1;
  padding: 20rpx;
}
.container .favorite-list .resource-item .info .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}
.container .favorite-list .resource-item .info .desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.container .favorite-list .resource-item .info .time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 20rpx;
  display: block;
}
.container .favorite-list .resource-item .info .actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}
.container .favorite-list .loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}