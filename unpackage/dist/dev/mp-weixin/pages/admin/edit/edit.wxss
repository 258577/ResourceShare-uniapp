.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.container .page-header {
  margin-bottom: 30rpx;
}
.container .page-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.container .search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.container .search-box .icon-search {
  font-size: 36rpx;
  color: #999;
  margin-right: 10rpx;
}
.container .search-box .search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}
.container .search-box .search-btn {
  font-size: 28rpx;
  color: #007aff;
  padding: 0 10rpx;
}
.container .resource-list .resource-item {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.container .resource-list .resource-item .resource-cover {
  width: 160rpx;
  height: 180rpx;
  flex-shrink: 0;
}
.container .resource-list .resource-item .resource-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.container .resource-list .resource-item .resource-info .resource-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.container .resource-list .resource-item .resource-info .resource-type {
  font-size: 24rpx;
  color: #007aff;
  margin-bottom: 10rpx;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  max-width: -webkit-max-content;
  max-width: max-content;
}
.container .resource-list .resource-item .resource-info .resource-desc {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.container .resource-list .resource-item .action-btns {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20rpx;
  gap: 10rpx;
}
.container .loading-container,
.container .empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.container .loading-container image,
.container .empty-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.container .loading-container text,
.container .empty-container text {
  font-size: 28rpx;
  color: #999;
}
.container .load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #007aff;
  font-size: 28rpx;
}
.container .back-btn {
  margin-top: 30rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 50rpx;
  font-size: 30rpx;
}
.container .custom-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  animation: fadeIn 0.2s ease-in-out;
}
.container .custom-popup .custom-popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.container .custom-popup .custom-popup-content {
  background-color: #fff;
  border-radius: 12rpx;
  width: 85%;
  max-width: 600rpx;
  max-height: 80vh;
  padding: 25rpx;
  position: relative;
  z-index: 1000;
  animation: scaleIn 0.2s ease-in-out;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.15);
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}
.container .custom-popup .custom-popup-content .custom-popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1px solid #f0f0f0;
}
.container .custom-popup .custom-popup-content .custom-popup-header .custom-popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.container .custom-popup .custom-popup-content .custom-popup-header .custom-popup-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
}
.container .custom-popup .custom-popup-content .custom-popup-body .custom-form-item {
  margin-bottom: 20rpx;
}
.container .custom-popup .custom-popup-content .custom-popup-body .custom-form-item .custom-form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.container .custom-popup .custom-popup-content .custom-popup-body .custom-form-item .custom-form-input,
.container .custom-popup .custom-popup-content .custom-popup-body .custom-form-item .custom-form-textarea {
  width: 100%;
  height: 70rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
}
.container .custom-popup .custom-popup-content .custom-popup-body .custom-form-item .custom-form-textarea {
  height: 120rpx;
  padding: 15rpx;
  resize: none;
}
.container .custom-popup .custom-popup-content .custom-popup-body .custom-form-item .type-selection {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -5rpx;
}
.container .custom-popup .custom-popup-content .custom-popup-body .custom-form-item .type-selection .type-item {
  padding: 6rpx 15rpx;
  margin: 0 5rpx 10rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}
.container .custom-popup .custom-popup-content .custom-popup-body .custom-form-item .type-selection .type-item.active {
  background-color: #007aff;
  color: #fff;
}
.container .custom-popup .custom-popup-content .custom-popup-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  margin-top: 10rpx;
  border-top: 1px solid #f0f0f0;
}
.container .custom-popup .custom-popup-content .custom-popup-footer .custom-btn {
  padding: 8rpx 25rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}
.container .custom-popup .custom-popup-content .custom-popup-footer .custom-cancel-btn {
  background-color: #f0f0f0;
  color: #666;
}
.container .custom-popup .custom-popup-content .custom-popup-footer .custom-confirm-btn {
  background-color: #007aff;
  color: #fff;
}
@keyframes fadeIn {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}
@keyframes scaleIn {
from {
    transform: scale(0.9);
    opacity: 0;
}
to {
    transform: scale(1);
    opacity: 1;
}
}