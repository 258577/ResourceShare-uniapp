.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.container .page-header {
  margin-bottom: 30rpx;
}
.container .page-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.container .search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.container .search-box .icon-search {
  font-size: 36rpx;
  color: #999;
  margin-right: 10rpx;
}
.container .search-box .search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}
.container .search-box .search-btn {
  font-size: 28rpx;
  color: #007aff;
  padding: 0 10rpx;
}
.container .resource-list .resource-item {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.container .resource-list .resource-item .resource-cover {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}
.container .resource-list .resource-item .resource-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.container .resource-list .resource-item .resource-info .resource-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.container .resource-list .resource-item .resource-info .resource-type {
  font-size: 24rpx;
  color: #007aff;
  margin-bottom: 10rpx;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  max-width: -webkit-max-content;
  max-width: max-content;
}
.container .resource-list .resource-item .resource-info .resource-desc {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.container .resource-list .resource-item .recommend-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
}
.container .resource-list .resource-item .recommend-btn .btn-text {
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 30rpx;
}
.container .resource-list .resource-item .recommend-btn .btn-text.recommended {
  background-color: #007aff;
  color: #fff;
}
.container .loading-container,
.container .empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.container .loading-container image,
.container .empty-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.container .loading-container text,
.container .empty-container text {
  font-size: 28rpx;
  color: #999;
}
.container .load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #007aff;
  font-size: 28rpx;
}
.container .back-btn {
  margin-top: 30rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 50rpx;
  font-size: 30rpx;
}